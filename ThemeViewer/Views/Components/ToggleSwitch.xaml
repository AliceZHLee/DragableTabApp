<UserControl x:Class="ThemeViewer.Views.Components.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThemeViewer.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Margin="0,2,2,1">
        <Grid HorizontalAlignment="Left" Height="60" Margin="0" VerticalAlignment="Top" Width="124">
            <Rectangle x:Name="Back" Fill="#FF1557E4" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="120" Margin="2,2,0,0" RadiusY="29" RadiusX="29" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Left" Height="44" VerticalAlignment="Center" Width="44" MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="70,0,0,0"/>
        </Grid>
    </Viewbox>
</UserControl>
